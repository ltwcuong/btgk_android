<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background ="@color/graylight"
    android:orientation="vertical"
    >
    <Button
        android:id="@+id/button1"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:text="Quay lại"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#757575"
        android:orientation="vertical">
        <TextView
            android:id="@+id/sk1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="THẦN ĐẾ"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="21sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/td" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_marginTop="25dp"
            android:paddingLeft="25dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tác giả :"
                android:textColor="#000"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/sk8"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Vũ Phong"
                android:textColor="#000"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Thể loại : "
                android:textColor="#000"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/sk9"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Huyền Huyễn"
                android:textColor="#000"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Trạng thái:"
                android:textColor="#000"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/sk10"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Đang ra"
                android:textColor="#000"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Độ dài :"
                android:textColor="#000"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/sk11"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="2536 chương"
                android:textColor="#000"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/sk12"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đánh giá :"
                android:textColor="#000"
                />
            <TextView
                android:id="@+id/sk13"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" 7.1/10 từ 25 lượt"
                android:textColor="#000"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/sk14"
                android:textStyle="bold|italic"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Thông tin truyện Thần Đế"
                android:textColor="#000"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/sk15"
                android:textStyle="bold|italic"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Thần Kỳ - Thần Đế.

Thiên Man đại lục, võ đạo hưng thịnh. Thiếu niên Tô Dật mang theo vạn yêu nghịch tập quật khởi, thống trị từng cái vạn năm thế gia đại tộc phía trên, cưới bạch phú mỹ, đi đến dị thế đỉnh phong, hướng Thái Cổ Thần Đế chi vị!"
                android:textColor="#000"

                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
